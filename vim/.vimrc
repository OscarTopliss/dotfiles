" based on basic vimrc by simonista on github

" no vi compatibility
set nocompatible

" ensure syntax highlighting
syntax on

" turn off auto continue comments
set formatoptions-=cro

" disable modelines
set modelines=0

" line numbers
set number
set relativenumber

"add ruler
set ruler

"visual bell
set visualbell

"set default encoding
set encoding=utf-8

"whitespace
"set wrap
"set textwidth=79
"set formatoption=
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smartindent
"set noshiftround

"status line
set laststatus=2

"show mode
set showmode
set showcmd
